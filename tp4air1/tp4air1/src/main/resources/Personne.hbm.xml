<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="fr.univ.paris13.model">
    <class name="Personne" table="personne">
        <id name="id" column="id">
            <generator class="assigned"/>
        </id>

        <property name="nom" column="nom"/>
        <property name="prenom" column="prenom"/>
        <property name="tel" column="tel"/>
        <property name="mail" column="mail"/>
        <property name="idAdresse" column="id_adresse"/>

        <!-- Relation N:1 vers Adresse -->
        
        <many-to-one name="adresse"
             class="fr.univ.paris13.model.Adresse"
             column="id_adresse"
             insert="false"
             update="false"
             not-null="false"/>
                     
                     
    </class>
</hibernate-mapping>
